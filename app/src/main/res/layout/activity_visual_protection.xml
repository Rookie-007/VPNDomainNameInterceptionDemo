<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.VisualProtectionActivity">




    <include
        android:id="@+id/lyaout_title"
        layout="@layout/layout_title" />

    <!--视力保护-->
    <LinearLayout
        android:id="@+id/ll_visual_protection"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/lyaout_title"
        android:layout_height="65dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginLeft="25dp"
            android:gravity="left|center"
            android:textSize="@dimen/activity_vertical_margin"
            android:textColor="@color/color_333333"
            android:text="视力保护"
            />

        <CheckBox
            android:id="@+id/sb_state"
            android:layout_width="45dp"
            android:layout_height="25dp"
            android:layout_marginRight="25dp"
            android:button="@null"
            android:background="@drawable/select_kidstate_switch_button" />

    </LinearLayout>

    <View
        android:id="@+id/v_line"
        app:layout_constraintTop_toBottomOf="@+id/ll_visual_protection"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/gray_bfdcdcdc"
        />


    <LinearLayout
        android:id="@+id/ll_setting_up_screen_saver"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/v_line"
        android:layout_height="65dp">

        <TextView
            android:layout_width="wrap_content"
            android:textSize="@dimen/font_size_12"
            android:layout_height="wrap_content"
            android:text="@string/every_time_you_use_a_cell_phone"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:id="@+id/ll_use_time"
            android:gravity="center"
            android:padding="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_use_time"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size_16"
                android:text="50 分钟"
                android:textColor="@color/color_333333"
                />

            <View
                android:id="@+id/v_line_1"
                app:layout_constraintTop_toBottomOf="@+id/ll_visual_protection"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_bfdcdcdc"
                />
        </LinearLayout>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_12"
            android:paddingLeft="5dp"
            android:text="@string/lock_screen"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:id="@+id/ll_lock_screen_length"
            android:gravity="center"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="60dp"
                android:id="@+id/tv_lock_screen_length"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size_16"
                android:text="10 分钟"
                android:textColor="@color/color_333333"
                />

            <View
                android:id="@+id/v_line_2"
                app:layout_constraintTop_toBottomOf="@+id/ll_visual_protection"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_bfdcdcdc"
                />
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>